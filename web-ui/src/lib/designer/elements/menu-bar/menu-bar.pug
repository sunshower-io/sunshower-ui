template
    .designer-menu-bar(slot="menu-bar")
        .template-info
            .dropdown-button(
                    ref="templateDD"
                    data-constrainwidth="false"
                    data-beloworigin="true"
                    data-activates="${controlId}"
                )
                | ${model.name}
                span.version v ${model.version.name()}
                i.material-icons.mdi.mdi-chevron-right.dropdown-icon
            ul.dropdown-content(id="${controlId}")
                li Last Edited ${model.modified}
                li Last Released

        ul.tab-menu
            li.tab.active
                a.material-icons.mdi.mdi-checkbox-multiple-blank
            li.tab
                a.material-icons.mdi.mdi-source-branch(title="Incomplete Feature")
        .utilities
            i.material-icons.mdi.mdi-file(click.delegate="configureFile()" title="Open Configuration File")
            i.material-icons.mdi.mdi-content-save(click.delegate="save()" title="Save")
            i.material-icons.mdi.mdi-undo-variant(click.delegate="undo()" title="Undo")
            i.material-icons.mdi.mdi-redo-variant(click.delegate="redo()" title="Redo")
