template
    require(from="lib/common/resources/custom-elements/body-panel/body-panel")
    .body-content.with-tabs(ref="content")
        h1 Applications

        .body-tab-menu
            .tabs(ref="tabHolder")
                li.tab
                    a.active(href="#tempCardHolder")
                        | Temporary Cards
                        span.badge 2
                li.tab
                    a(href="#anotherHolder")
                        | A Different Tab
                        span.badge 1
            a.btn-floating.waves-effect(title="Add application" href="#testModal")
                i.material-icons.mdi.mdi-plus
        .body-tab-holder(id="tempCardHolder")
            .card
                .card-content
                    .card-icon
                        summary-icon(text="Docker Swarm Template" size="90")
                    h2.card-title Docker Swarm Template
                    .card-button
                        a.btn.waves-effect Deploy
                .card-action
                    .action.left
                        .chip.state-good Release
                    .action.right.version Version 1.0.23
            .card
                .card-content
                    .card-icon
                        summary-icon(text="Docker Swarm Template" size="90")
                    h2.card-title Docker Swarm Template With A Super Super Super Super Super Long Name
                    .card-button
                        a.btn.waves-effect Deploy
                .card-action
                    .action.left
                        .chip.state-good Release
                    .action.right.version Version 1.0.23
        .body-tab-holder(id="anotherHolder")
            .card
                .card-content
                    .card-icon
                        summary-icon(text="Hi" size="90")
                    h2.card-title Hi
                    .card-button
                        a.btn.waves-effect Deploy
                .card-action
                    .action.left
                        .chip.state-pending Pending
                    .action.right.version Version 1

        .modal(id="testModal" ref="createModal")
            .modal-header Create Application Template
            .modal-content
                form
                    .input-field
                        input(type="text" id="applicationName")
                        label(for="applicationName") Application Name
                    .button-holder
                        button.waves-effect.btn(type="submit") Create
    body-panel(active.bind="panelActive" sections.bind="true" content.bind="content")